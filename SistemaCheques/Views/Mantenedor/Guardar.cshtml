<!--Se utiliza el documento model para implementar los metodos-->
@model ConceptoPagoModel
@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-center" style="width: 40%;">
    <div class="card-header">
        Especifique el concepto de pago
    </div>
    <div class="card-body">
        <form asp-action="Guardar" asp-controller="Mantenedor" method="post">

            <!-- Descripcion -->
            <div class="mb-4">
                <label for="Descripcion" class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="text" class="form-control" id="Descripcion">
                <span asp-validation-for="Descripcion" class="text-danger"></span>

            </div>

            <!-- Estados -->
            
            <div class="mb-3">
                <label for="Estado" class="form-label">Estado</label>
                <input asp-for="Estado" type="text" class="form-control" id="Estado">
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">

                <label for="Estado" class="form-label"> Estado </label> <br />

                <select asp-for="Estado" class="form-select" aria-label="Default select example">
                    <option selected>Seleccione el tipo de persona</option>
                    <option value="Pendiente">Pendiente</option>
                    <option value="Aprobado">Aprobado</option>
                    <option value="En Proceso">En Proceso</option>
                    <option value="Pagado">Pagado</option>
                    <option value="Rechazado">Rechazado</option>
                    <option value="Aprobado">Aprobado</option>
                </select>
        
            </div>
            <button type="submit" class="d-grid gap-2 col-2 mx-auto btn btn-success">Guardar</button> 
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-dark"> Regresar a la lista </a>
        </form>
    </div>
</div>

                