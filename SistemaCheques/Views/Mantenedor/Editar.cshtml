@model ConceptoPagoModel
@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-center" style="width: 40%;">
    <div class="card-header">
        Editar concepto de pago
    </div>
    <div class="card-body">
        <form asp-action="Editar" asp-controller="Mantenedor" method="post">

            <input asp-for="idConceptoPago" type="hidden" class="form-control">

            <!-- Descripcion -->
            <div class="mb-4">
                <label for="Descripcion" class="form-label">Descripcion</label>
                <input asp-for="Descripcion" type="text" class="form-control" id="Descripcion">
                <span asp-validation-for="Descripcion" class="text-danger"></span>

            </div>

            <!-- Estados -->

            <div class="mb-3">
                <label for="Estado" class="form-label">Estado</label>
                <input asp-for="Estado" type="text" class="form-control" id="Estado">
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="mb-3">

                <label for="Estado" class="form-label"> Estado </label> <br />

                <div class="form-check form-check-inline">
                    <input asp-for="Estado" value="Pendiente" class="form-check-input" type="radio" name="Pendiente" id="Pendiente">
                    <label class="form-check-label" for="Pendiente">Pendiente</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="Estado" type="radio" name="inlineRadioOptions" id="EstadoAprobado" value="Aprobado">
                    <label class="form-check-label" for="EstadoAprobado">Aprobado</label> <br />
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="Estado" type="radio" name="inlineRadioOptions" id="EstadoEnProceso" value="EnProceso">
                    <label class="form-check-label" for="EstadoEnProceso">En Proceso</label> <br />
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="Estado" type="radio" name="inlineRadioOptions" id="EstadoPagado" value="Pagado">
                    <label class="form-check-label" for="EstadoPagado">Pagado</label>
                </div>

                <div class="form-check form-check-inline">
                    <input class="form-check-input" asp-for="Estado" type="radio" name="inlineRadioOptions" id="EstadoRechazado" value="Rechazado">
                    <label class="form-check-label" for="EstadoRechazado">Rechazado</label>
                </div>
            </div>
            <button type="submit" class="d-grid gap-2 col-2 mx-auto btn btn-success">Actualizar</button>
            <a asp-action="Listar" asp-controller="Mantenedor" class="btn btn-dark"> Regresar a la lista </a>
        </form>
    </div>
</div>


